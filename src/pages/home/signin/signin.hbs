<div class="signin-wrapper">
  <div class="signin-container">
    <h1 class="signin-header">Вход</h1>
    <form class="signin-form">
      <div class="signin-form-input-group">
        {{> label-input label="Логин" type="text" name="login" autocomplete="login"}}
        {{> label-input label="Пароль" type="password" name="password" autocomplete="password"}}
      </div>
      <div class="signin-form-signin-btn-wrapper">
        {{> btn href="#" id="renderChatsBtn" class="btn" text="Авторизоваться"}}
      </div>
    </form>

    <div class="signin-container-signup-btn-wrapper">
      {{> btn href="#" id="renderSignupBtn" class="btn-secondary" text="Нет аккаунта?"}}
    </div>
  </div>
</div>