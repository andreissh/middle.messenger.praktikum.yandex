<div class="signin-wrapper">
  <div class="signin-container">
    <h1 class="signin-header">Вход</h1>
    <form class="signin-form">
      <div class="signin-form-input-group">
        {{> label-input label="Логин" inputType="text" inputName="login" inputValue="" autocomplete='login'}}
        {{> label-input label="Пароль" inputType="password" inputName="password" inputValue="" autocomplete='password'}}
      </div>
      <div class="signin-form-btn-group">
        <button
          type="submit"
          id="renderChatsBtn"
          class="signin-form-btn"
        >Авторизоваться</button>
      </div>
    </form>

    <button
      id="renderSignupBtn"
      class="signin-form-btn singin-form-btn--transparent"
    >Нет аккаунта?</button>
  </div>
</div>