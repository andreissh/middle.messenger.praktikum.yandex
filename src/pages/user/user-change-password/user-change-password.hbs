<div class="user-change-pass">
  <div class="user-change-pass-goback-block">
    <img src="{{backBtn}}" alt="backBtn">
  </div>
  <div class="user-change-pass-content-wrapper">
    <div class="user-change-pass-content">
      <div class="user-change-pass-avatar-block">
        <span class="user-change-pass-avatar">
          <img src="{{avatarImg}}" class="user-change-pass-avatar-img" />
        </span>
      </div>
      <form class="user-change-pass-data-block">
        <ul class="user-change-pass-data-list">
            {{> user-label-input label="Старый пароль" type="password" name="oldPassword" autocomplete="oldPassword"}}
            {{> user-label-input label="Новый пароль" type="password" name="newPassword" autocomplete="newPassword"}}
            {{> user-label-input label="Повторите пароль" type="password" name="newPassword" autocomplete="newPassword"}}
        </ul>
      </form>
      <div class="user-change-pass-links-block">
        {{> btn href="#" class="btn" text="Сохранить"}}
      </div>
    </div>
  </div>
</div>